<% @books.each do |book| %>
  <%= link_to book.name, book %><br>
  <p><%= book.author.name %></p>
  <div>
    <%= link_to t("book.show.edit"), edit_book_path(book) %>
    <%= link_to t("book.show.delete"), book,
      method: :delete, data: { confirm: t("book.show.confirm") } %>
  </div><br>
<% end %>
