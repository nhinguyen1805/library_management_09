  <div class="row">
    <aside class="col-md-4">
      <section class="stats">
          <%= render "shared/stats" %>
      </section>
    </aside>
  </div>
<% end %><br>
<div class="row">
  <div class="col-md-2">
    <%= render "follow_form" if logged_in? %>
  </div>
</div>
